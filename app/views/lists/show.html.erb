<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://www.benefsnet.com/images/cms/film.gif);">
  <div class="container text-center ">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <p><strong>Movies</strong></p>
  <ul>
    <% @list.movies.each do |movie| %>
      <li > Titre : <%= movie.title %> </li>
      <% bookmark = Bookmark.find_by({list_id: @list.id, movie_id: movie.id}) %>
      <%= link_to "delete",
      bookmark_path(bookmark),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title}"}
      %>
    <% end %>
  </ul>
</div>

<div class="container ">
  <p><strong>Add a movie</strong></p>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment  %>
        <%= f.input :movie_id, collection: Movie.all %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>

<%= link_to "Back to Lists", lists_path %>
</div>
